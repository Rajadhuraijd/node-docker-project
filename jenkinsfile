pipeline{
    agent any
    stages {
        stage("checkout scm"){
            steps{
                checkout scm
            }
        }
        stage("Build"){
            steps{
                sh 'npm run build'
            }
        }
        stage("build docker image"){
            steps{
                sh 'sudo docker build -t nodeapp:v1 .'

            }
        }
  }
}
