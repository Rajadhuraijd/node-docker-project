pipeline{
    agent any
    stages {
        stage("checkout scm"){
            steps{
                checkout scm
            }
        }
        stage("test"){
            steps{
                sh 'url -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.2/install.sh | bash'
                sh '/root/.nvm/nvm.sh'
                sh 'npm install 22'
                sh 'node -v'
                sh 'npm -v'
                sh 'nvm current'
                sh 'npm test'
            }
        }
        stage("Build"){
            steps{
                sh 'npm run build'
            }
        }
  }
}
